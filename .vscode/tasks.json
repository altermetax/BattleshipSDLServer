{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-no-pie",
                "${workspaceFolder}/src/*",
                "-o",
                "${workspaceFolder}/build/battleship_debug_server",
                "-I${workspaceFolder}/include",
                "-lSDL2",
                "-lSDL2_net"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}